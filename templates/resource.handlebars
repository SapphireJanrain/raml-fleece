<div class="card resource">
<h3 class="anchor" id="{{basePath}}{{path}}">
  <a href="#{{basePath}}{{path}}">
    {{#if basePath}}<span class="parent">{{basePath}}</span>{{/if}}{{path}}
  </a>
</h3>
{{#if description}}
  <div class="description">{{markdown description}}</div>
{{/if}}
{{#if uriParameters}}
  {{> parameters type="URI" params=uriParameters}}
{{/if}}
{{#each methods}}
<div class="method">
    <a
      class="verb {{method}}"
      id="{{upperCase method}}{{../basePath}}{{../  path}}"
      href="#{{upperCase method}}{{../basePath}}{{../  path}}"
    ><span>{{method}}</span></a>
  {{#if securedBy}}
    <h4>Security</h4>
    <ul class="security-schemes">
    {{#each securedBy}}
    <li>
      <a href="#security:{{.}}">
        <span class="glyphicon glyphicon-lock"></span>
        {{nameForSecurityScheme .}}
      </a>
    </li>
    {{/each}}
    </ul>
  {{/if}}
  {{#if description}}
    <h4>Description</h4>
    <p>{{markdown description}}</p>
  {{/if}}
  {{#if queryParameters}}
    {{> parameters type="Query" params=queryParameters}}
  {{/if}}
  {{#each body}}
    {{!-- Type = @key --}}
    {{#if schema}}
      <h4>Request JSON Schema</h4>
      {{showCode schema type="json"}}
    {{/if}}
  {{/each}}
  {{#each requestExamples}}
    {{#if .}}
      <h4>Request Example</h4>
      {{showCodeOrForm .}}
    {{/if}}
  {{/each}}
  {{#each responses}}
    {{#if body}}
      <p>{{body}}</p>
    {{/if}}
    {{#if code}}
      <h4>{{responseCode code}}</h4>
    {{/if}}
    {{#if description}}
      {{markdown description}}
    {{/if}}
    {{#if schema}}
      <h4>Response JSON Schema</h4>
      {{showCode schema type="json"}}
    {{/if}}
    {{#if example}}
      <h4>
        Response Example
        {{#if type}}
          (<tt>{{type}}</tt>)
        {{/if}}
      </h4>
      {{showCode example type=type}}
    {{/if}}
  {{/each}}
</div>
{{/each}}
</div>
