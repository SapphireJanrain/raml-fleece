<div class="panel panel-default resource">
  <div class="panel-heading">
    <span class="pull-right">
    {{#each methods}}
      <span class="badge method {{method}}">{{method}}</span>
    {{/each}}
    </span>
    <h3 class="panel-title" id="{{basePath}}{{path}}">
      <a href="#{{basePath}}{{path}}">
        {{#if basePath}}<span class="parent">{{basePath}}</span>{{/if}}{{path}}
      </a>
    </h3>
  </div>
  <div class="panel-body">
  <p>{{markdown description}}</p>
  {{#each methods}}
    <h4 class="method {{upmethod}}" id="{{upper_case method}}{{../basePath}}{{../  path}}">
      <a href="#{{upper_case method}}{{../basePath}}{{../  path}}">
        {{method}}
      </a>
    </h4>
    <p>{{description}}</p>
    {{#if queryParameters}}
      <h5>Query Parameters</h5>
      <ul>
      {{#each queryParameters}}
        <li>
          <i>({{type}})</i>
          <b><tt>{{@key}}</tt></b>
        </li>
      {{/each}}
      </ul>
    {{/if}}
    {{#if body}}
      <div class="body">
        {{#each body}}
          <p>Format: {{@key}}</p>
          {{#if example}}
          Example:
          {{!-- {{json example}} --}}
          <pre><code>{{example}}</code></pre>
          {{/if}}
        {{/each}}
      </div>
    {{/if}}
  {{/each}}
  </div>
</div>
